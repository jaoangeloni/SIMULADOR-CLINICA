<%- include('../partials/head.ejs') %>

    <div class=" bg-white h-screen flex items-center justify-center">

        <div class="bg-white w-3/4 h-5/6 flex justify-between rounded-md drop-shadow-drop">

            <div class=" w-2/5 p-6 flex flex-col gap-6">

                <p class=" font-light text-2xl">System<span class="text-red-500 font-bold">Med</span></p>

                <p class=" font-light text-4xl text-red-500">Bem vindo,<br><span
                        class="font-bold text-4xl">doutor!</span></p>

                <form method="post" action="/medicos/login"
                    class="w-full flex flex-col items-center justify-center gap-8 pt-8">

                    <div class="flex w-full">
                        <input type="email" name="email" id="email"
                            class="bg-gray-200 w-full outline-none p-2 border-b-4 border-b-red-500" placeholder="E-mail"
                            required>
                        <img src="https://cdn.iconscout.com/icon/free/png-256/free-email-2029111-1713291.png?f=webp"
                            class="w-10 bg-gray-200 p-2 rounded-tr-md rounded-br-md">
                    </div>

                    <div class="flex w-full">
                        <input type="password" name="senha" id="senha"
                            class="bg-gray-200 w-full outline-none p-2 border-b-4 border-b-red-500" placeholder="Senha"
                            required>
                        <img src="https://icons.veryicon.com/png/o/miscellaneous/remitting-country-linear-icon/password-148.png"
                            class="w-10 bg-gray-200 p-2 rounded-tr-md rounded-br-md">
                    </div>

                    <button type="submit" class="bg-red-500 p-2 text-white rounded-md w-full">Login</button>

                    <p class="text-sm">Problemas? Consulte o administrador!
                    </p>

                    <% if(msg !='' ) { %>
                        <p id="msgErro" class="text-red-500 font-bold">
                            <%= msg %>
                        </p>
                        <% }%>
                </form>
            </div>

            <div class="w-3/5
            bg-[url('https://qtxasset.com/quartz/qcloud5/media/image/fiercehealthcare/1638893797/GettyImages-1265084933.jpg?VersionId=rAc20HiCFgrbX1vrOiRUFLm8LCkFyhRf')]
            bg-cover rounded-tr-md rounded-br-md bg-left">
            </div>
            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>